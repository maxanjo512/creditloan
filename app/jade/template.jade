doctype html
html
  head
    block title
    //Favicon
    link(rel="shortcut icon", href="img/favicon.ico" type="image/x-icon")
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    //Styles
    block css
      include style-home.jade
      //build:css css/main.min.css
      link(rel="stylesheet", href="css/fonts.css")
      link(rel="stylesheet", href="css/bootstrap.css")
      link(rel="stylesheet", href="css/main.css")
      //endbuild 
      script(src="scripts/angular/angular.min.js")
      script(src="scripts/angular/angular-animate.min.js")
      script(src="scripts/angular/ui-bootstrap-tpls-1.3.3.min.js")
  body
    block content
    block vendor
    //build:js scripts/main.min.js
    script(src="scripts/common.js")
    //endbuild
    script.
      function loadCss(hf){
        var ms=document.createElement("link"); ms.rel="stylesheet";ms.href=hf;document.getElementsByTagName("body")[0].appendChild(ms);
      }
      loadCss ("css/vendor.min.css");
      loadCss ("css/main.min.css");
