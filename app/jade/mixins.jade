//-FORM
//+form('send','name','phone','message')
mixin form(button, ...items)
  form(action="php/mail.php" method="post")
    each item in items
        p
          label(for="#{item}") #{item}
          input.field(name="#{item}" type="text")= item
    p
      label(for="message") message
      textarea(cols="40" rows="5" name="message")
    input(type="submit" name="submit" value="#{button}")


//-Slider
//- +slider(1,2,3,4,5)
mixin slider(...items)
    .owl-carousel#owl-carousel
      each item in items
        .slide
          .clearfix
            .section-title
              h3=slider.title
              p= slider.excerpt
              a.button(href="#")=slider.button

