//-SCROLL-MENU
//- +nav-scroll('home', 'about', 'contacts')
mixin nav-scroll( ...items)
  - var link = '#'
    nav
      each item in items
        li
          a(href='#{link + item}')= item

//-MENU
//- +nav('folder', 'html', 'home', 'about', 'contact')
mixin nav(folder, type, ...items)
  - var link = '/'
  - var dot = '.'
    nav
      each item in items
        li
          a(href='#{folder +link + item + dot + type}')= item
